<idea-plugin>
    <id>edu.umontreal.hatchery</id>
    <name>hatchery</name>
    <vendor email="breandan.considine@umontreal.ca" url="http://www.umontreal.ca">Université de Montréal</vendor>
    <idea-version since-build="143.379"/>

    <description>Plugin for developing applications for the Robot Operating System.</description>
    <resource-bundle>edu.umontreal.hatchery.HatcheryBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="edu.umontreal.hatchery.filesystem.ROSAcroFileFactory"/>
        <fileTypeFactory implementation="edu.umontreal.hatchery.filesystem.ROSLaunchFileFactory"/>
        <fileTypeFactory implementation="edu.umontreal.hatchery.filesystem.ROSPackageFileFactory"/>
        <!--<fileTypeFactory implementation="edu.umontreal.hatchery.filesystem.RVizFileFactory"/>-->

        <psi.fileReferenceHelper implementation="edu.umontreal.hatchery.references.ROSFileReferenceHelper"/>

        <psi.referenceContributor language="XML" implementation="edu.umontreal.hatchery.references.ROSPackageReferenceContributor"/>
        <psi.referenceContributor language="XML" implementation="edu.umontreal.hatchery.references.ROSLaunchReferenceContributor"/>

        <codeInsight.lineMarkerProvider language="XML" implementationClass="edu.umontreal.hatchery.references.ROSPackageLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="XML" implementationClass="edu.umontreal.hatchery.references.ROSLaunchLineMarkerProvider"/>
    </extensions>
</idea-plugin>